<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivPokemon"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/mewtwo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNomePokemon"
                style="@style/label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mewtwo" />

            <TextView
                android:id="@+id/tvTipoPokemon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Genetic"
                android:textColor="#ccc"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvDescricaoPokemon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:text="Mewtwo is a Pokémon that was created by genetic manipulation. However,
                 even though the scientific power of humans created this Pokémon's body,
                  they failed to endow Mewtwo with a compassionate heart." />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>